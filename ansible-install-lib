    install_fq_archlinux latest /usr/sbin/python pip $ANSIBLE_VER
}

install_ubuntu () {
    local os_ver=$1
    install_fq_ubuntu $os_ver /usr/bin/python3 pip3 $ANSIBLE_VER
}

